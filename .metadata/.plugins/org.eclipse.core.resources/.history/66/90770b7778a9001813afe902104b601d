package com.adhiraj.algorithmsi.elementarysorts;

public class SelectionSort {

	private SelectionSort() {
	}

	public static <T extends Comparable<T>> void sort(T[] a) {
		for (int i = 0; i < a.length - 1; i++) {
			int min = i;
			for (int j = i + 1; j < a.length; j++) {
				if (compare(a[min], a[j]) > 1) {
					min = j;
				}
			}
			swap(a, i, min);
		}
	}

	private static void swap(Object[] a, int i, int min) {
		Object tmp = a[i];
		a[i] = a[min];
		a[min] = tmp;
	}

	private static <T extends Comparable<T>> int compare(T x, T y) {
		return x.compareTo(y);
	}

	private static <T> void show(Comparable<T>[] a) {
		for (int i = 0; i < a.length; i++) {
			System.out.println(a[i]);
		}
	}

	public static void main(String[] args) {
		Integer[] a = { 2, 5, 8, 9, 0, 1, 3, 2, 7, 3, 2 };
		SelectionSort.sort(a);
		show(a);
	}

}
