package com.adhiraj.algorithmsi.elementarysorts;

import edu.princeton.cs.algs4.Selection;
import edu.princeton.cs.algs4.StdIn;
import edu.princeton.cs.algs4.StdOut;

public class SelectionSort {

	private SelectionSort() {
	}

	public static void sort(Comparable<?>[] a) {

		for (int i = 0; i < a.length - 1; i++) {
			int min = i;
			for (int j = i + 1; j < a.length; j++) {
				if (compare(a[min], a[j]) > 1) {
					min = j;
				}
			}
			swap(a, i, min);
		}
	}

	private static void swap(Object[] a, int i, int min) {
		Object tmp = a[i];
		a[i] = a[min];
		a[min] = tmp;
	}

	@SuppressWarnings("unchecked")
	private static <T> int compare(Comparable<T> x, Comparable<T> y) {
		return x.compareTo((T) y);
	}

	private static void show(Comparable[] a) {
		for (int i = 0; i < a.length; i++) {
			System.out.println(a[i]);
		}
	}

	public static void main(String[] args) {
		Integer[] a = { 2, 5, 8, 9, 0, 1, 3, 2, 7, 3, 2 };
		Selection.sort(a);
		show(a);
	}

}
